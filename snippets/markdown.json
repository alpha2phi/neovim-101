{
  "Link": {
    "prefix": "link",
    "body": "[$1]($2)$0",
    "description": "Add link"
  },
  "URL": {
    "prefix": "url",
    "body": "<$1>$0",
    "description": "Add url"
  },
  "Image": {
    "prefix": "img",
    "body": "![$1]($2)$0",
    "description": "Add image"
  },
  "Strikethrough": {
    "prefix": "strike",
    "body": "~~$1~~$0",
    "description": "Insert strikethrough"
  },
  "Insert bold text": {
    "prefix": "b",
    "body": "**$1**$0",
    "description": "Insert bold text"
  },
  "Insert italic text": {
    "prefix": "i",
    "body": "*$1*$0",
    "description": "Insert italic text"
  },
  "Insert bold and italic text": {
    "prefix": "bi",
    "body": "***$1***$0",
    "description": "Insert bold and italic text"
  },
  "Insert quoted text": {
    "prefix": "quote",
    "body": "> $1",
    "description": "Insert quoted text"
  },
  "Insert code block": {
    "prefix": "cbl",
    "body": "```${1:language}\n\t$2\n```$0",
    "description": "Insert fenced code block"
  },
  "Insert horizontal rule": {
    "prefix": "rule",
    "body": "----------\n",
    "description": "Insert horizontal rule"
  },
  "detail": {
    "prefix": "detail",
    "body": "<details>\n\t<summary>$1</summary>\n\t$2\n</details>$0",
    "description": "Insert spoiler"
  }
}
